            </div>
        </div><!-- /row-->
      </div>
</section>
<!--////////// NEWSLETTER SECTION ////////// -->
<section id="newsletter" ng-app="app-email">
    <div class="d-flex flex-column justify-content-center">
        <h3>Inviting You To The Launch of AvantTek.com</h3>
    </div>
    <div ng-controller="emailController as vm" class="d-flex justify-content-center">
        <div ID="emailtest" style="padding-top: 75px" class="ng-app">
                <form novalidate name="myForm" class="form-inline" ng-submit="vm.SendGridAlphaInterested(vm.email.text)">
                    <div class="d-flex flex-row justify-content-center">
                        <input type="email" name="input" class="input-sm" ng-model="vm.email.text" required/>
                        <button ng-click='validateEmail()' type="submit" class="btn btn-secondary">Send Me Updates</button>
                    </div>
                </form>
                <!-- <div class="d-flex flex-column justify-content-center"> -->
                            <p id="emErr" ng-show="myForm.input.$invalid && myForm.input.$dirty" 
                                 class="d-flex flex-column justify-content-center"
                                 style="font-size: 20px">
                                 A valid email is required</p>
                <!-- </div> -->
            </div>
                
         </div>
</section>
