<section id="intro" class="intro-well d-flex flex-row justify-content-center" style="padding-top: 25px;padding-bottom: 5px;">
    <div class="d-flex flex-column justify-content-center" style="padding-top: 0px; padding-bottom: 0px">
        <h1 style="padding-bottom: 30px">The AvantTek Solution</h1> 
        </div>
</section>
<!-- ////////// FEATURES SECTION ////////// -->
<section id="features" style="padding-top: 22px">
    <div>
        <picture class="d-flex flex-row justify-content-center" style="margin-bottom: 15px; margin-top: 20px">
