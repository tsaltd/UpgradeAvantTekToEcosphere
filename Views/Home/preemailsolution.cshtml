             <img src="~/Red/img/mobileAzure.PNG" alt="Cloudy" style="padding-bottom: 22px;">>
        </picture>
    </div>
</section>

<!--//////////  SECTION ////////// -->
@* <section id="newsletter" ng-app="app-email" class="d-flex flex-column" style="background: white"> *@
